<!-- 新規登録フォームのコンテナー -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-7">

      <!-- 新規登録フォーム -->
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header">
          <h3 class="text-center font-weight-light my-1">アカウントを作成する</h3>
        </div>
        <div class="card-body">
          <form>
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-floating mb-3 mb-md-0">
                  <input class="form-control" id="inputName" type="text" placeholder="名前を入力してください" />
                  <label for="inputName">名前</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input class="form-control" id="inputNickName" type="text" placeholder="姓を入力してください" />
                  <label for="inputNickName">ニックネーム</label>
                </div>
              </div>
            </div>
            <div class="form-floating mb-3">
              <input class="form-control" id="inputEmail" type="email" placeholder="メールアドレスを入力してください" />
              <label for="inputEmail">メールアドレス</label>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-floating mb-3 mb-md-0">
                  <input class="form-control" id="inputPassword" type="password" placeholder="パスワードを入力してください" />
                  <label for="inputPassword">パスワード</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input class="form-control" id="inputConfirmPassword" type="password" placeholder="パスワードを再度入力してください" />
                  <label for="inputConfirmPassword">パスワードの確認</label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="age-input" class="form-label">年齢</label>
                <input type="number" class="form-control" id="age-input" placeholder="年齢を選んでください">
              </div>
              <div class="col-md-6 mb-3">
                <label for="birthday-input" class="form-label">誕生日</label>
                <input type="date" class="form-control" id="birthday-input" placeholder="Enter your birthday">
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="inputType" class="form-label">種別</label>
                <input class="form-control" id="inputName" type="text" placeholder="(例) 三毛猫" />
              </div>
              <div class="col-md-6">
                <label for="inputWeight" class="form-label">体重</label>
                <input class="form-control" id="inputNickName" type="text" placeholder="任意で入力してください" />
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="inputBirthPlace" class="form-label">生まれ</label>
                <input class="form-control" id="inputBirthPlace" type="text" placeholder="(例) 川越生まれ" />
              </div>
              <div class="col-md-6">
                <label for="inputRaise" class="form-label">育ち</label>
                <input class="form-control" id="inputRaise" type="text" placeholder="(例) 家猫育ち" />
              </div>
            </div>
            <div class="form-floating mb-3">
              <textarea class="form-control" id="inputPersonality" placeholder="ここに性格を入力してください"></textarea>
              <label for="inputPersonality">性格</label>
            </div>
            <div class="form-floating mb-3">
              <textarea class="form-control" id="inputCharmPoint" placeholder="ここにチャームポイントを入力してください"></textarea>
              <label for="inputCharmPoint">チャームポイント</label>
            </div>
            
            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
              <a class="small" href="#">アカウントをお持ちの場合</a>
              <button class="btn btn-primary" type="submit">アカウントを作成する</button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>








