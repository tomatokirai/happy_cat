<!-- 新規登録フォームのコンテナー -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-7">

      <!-- 新規登録フォーム -->
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header">
          <h3 class="text-center font-weight-light my-1">アカウントとプロフィールを作成する</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do %>
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-floating mb-3 mb-md-0">
                  <input class="form-control" id="inputLastName" type="text"  name="user[last_name]" placeholder="姓を入力してください" />
                  <label for="inputLastName">姓</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input class="form-control" id="inputFirstName" type="text" name="user[first_name]" placeholder="名を入力してください" />
                  <label for="inputFirstName">名</label>
                </div>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-floating mb-3 mb-md-0">
                  <input class="form-control" id="inputLastNameKana" type="text"  name="user[last_name_kana]" placeholder="セイを入力してください" />
                  <label for="inputLastNameKana">セイ</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input class="form-control" id="inputFirstNameKana" type="text" name="user[first_name_kana]" placeholder="ナマエを入力してください" />
                  <label for="inputFirstNameKana">メイ</label>
                </div>
              </div>
            </div>
            <div class="form-floating mb-3">
              <input class="form-control" id="inputEmail" type="email" name="user[email]" placeholder="メールアドレスを入力してください" />
              <label for="inputEmail">メールアドレス</label>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-floating mb-3 mb-md-0">
                  <input class="form-control" id="inputPassword" type="password" name="user[password]" placeholder="パスワードを入力してください" />
                  <label for="inputPassword">パスワード</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input class="form-control" id="inputConfirmPassword" type="password" placeholder="パスワードを再度入力してください" />
                  <label for="inputConfirmPassword">パスワードの確認</label>
                </div>
              </div>
            </div>

            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
              <a class="small" href=" /users/sign_in/">アカウントをお持ちの場合</a>
              <button class="btn btn-primary" type="submit">アカウントを作成する</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>








